<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="RandomNoTest"
        android:textSize="35sp"
        android:layout_marginVertical="25dp"
        android:textColor="#13E8D2"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Random No: "
            android:textSize="30sp"
            android:textColor="#59B1FD"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvFirst"
            android:textSize="45sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd Random No: "
                android:textSize="30sp"
                android:textColor="#59B1FD"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSecond"
                android:textSize="45sp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtAdd"
        android:layout_marginHorizontal="10dp"
        android:hint="Addition of 2 numbers.."
        android:textSize="23sp"
        android:textColor="#ffff"
        android:inputType="number"
        android:backgroundTint="#ADA7A7"
        android:textColorHint="#ADA7A7"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtSub"
        android:layout_marginHorizontal="10dp"
        android:hint="Subtraction of 2 numbers.."
        android:textSize="23sp"
        android:textColor="#ffff"
        android:inputType="number"
        android:backgroundTint="#ADA7A7"
        android:textColorHint="#ADA7A7"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMult"
        android:layout_marginHorizontal="10dp"
        android:hint="Multiplication of 2 numbers.."
        android:textSize="23sp"
        android:textColor="#ffff"
        android:inputType="number"
        android:backgroundTint="#ADA7A7"
        android:textColorHint="#ADA7A7"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtDiv"
        android:layout_marginHorizontal="10dp"
        android:hint="Division of 2 numbers.."
        android:textSize="23sp"
        android:textColor="#ffff"
        android:inputType="numberDecimal"
        android:backgroundTint="#ADA7A7"
        android:textColorHint="#ADA7A7"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReload"
        android:background="@drawable/custom_button"
        android:padding="12dp"
        android:text="Reload"
        android:textSize="22sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:background="@drawable/custom_button"
        android:padding="12dp"
        android:text="Clear all"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textColor="#000000"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

</LinearLayout>